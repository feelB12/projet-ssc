{% extends "base.html.twig" %}

{% block metatitle %}
    {{ session.title }} | Skateboard Social Club
{% endblock metatitle %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/details.css') }}">
    <link rel="stylesheet" href="{{ asset('css/burger.css') }}">
{% endblock stylesheets %}

{% block main %}
    <article class="top">
        <img class="title left logo resp top" src="{{ asset('icon/sessions_titre.png') }}" alt="session">
        <img class="title right logo resp top" src="{{ asset('icon/session.png') }}" alt="session-icon">
    </article>
    <article class="book-detail">
        {#        <div class="book-image">#}
        {#            <img class="book-image" src="{{ book.image }}" title="{{ book.title }}" alt="photo de la couverture du livre">#}
        {#        </div>#}
        <div class="card-text top">
            <h1>{{ session.title }}</h1><br>
            <h3>{{ session.description }}</h3><br>
            <h3>{{ session.address }}</h3><br>
            <h3>{{ session.town }}</h3><br>
            <h3>{{ session.area }}</h3><br>
                {% if session.startAt %}
                    <h3>La session est commencé depuis: {{ session.startAt  | date("Y-m-d H:i:s") }}</h3>
                {% else %}
                    <h3>La session n'est pas commencé </h3>
                {% endif %}
                {% if session.finishedAt %}
                    <h3>La session est finie depuis: {{ session.finishedAt  | date("Y-m-d H:i:s") }}</h3>
                {% else %}
                    <h3>La session n'est pas finie </h3>
                {% endif %}
