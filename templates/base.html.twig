            <li><img src="{{ asset('icon/loupe.png') }}" alt="loupe" class=""></li>
            <li><img src="{{ asset('icon/login.png') }}" alt="login" class=""></li>
            <li>
                <div id="menuToggle">
                    <input type="checkbox"/>
                    <span></span>
                    <span></span>
                    <span></span>
                    <ul class="container" id="menu">
                        <a href="{{ path('sessions') }}"><li class="col">SESSIONS</li></a>
                        <a href="{{ path('skateparks') }}"><li class="col">SKATEPARKS</li></a>
                        <a href="{{ path('clubs') }}"><li class="col">CLUBS</li></a>
                        <a href=="{{ path('shops') }}"><li class="col">SHOPS</li></a>
                    </ul>
                </div>
            </li>
        </ul>
    </nav>

