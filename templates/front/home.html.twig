                           <h2>{{ shop.title }}</h2>
                           <h3>{{ shop.description }}</h3><br>
                       </div>
                   </div>
               {% endfor %}
               <a href="{{ path('shops') }}">Voir tous les shops</a>
           </article>
       </section>
