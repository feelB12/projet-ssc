{% extends "profile/base.html.twig" %}

{% block main %}

    <section class="section">
        {% for session in lastSessions %}
            <div class="card">
                <div class="card-text">
                    <h2>{{ session.title }}</h2>
                    <h3>{{ session.description }}</h3>
                </div>
            </div>
        {% endfor %}
        <a href="{{ path('profile_sessions') }}">Voir tous les sessions</a>
        <a class="link" href="{{ path('profile_session_create') }}">Créer un session</a>
    </section>

    <section class="section">
        {% for skatepark in lastSkateparks %}
            <div class="card">
                <div class="card-text">
                    <h2>{{ skatepark.title }}</h2>
                    <h3>{{ skatepark.description }}</h3>
                </div>
            </div>
        {% endfor %}
        {#       <a href="{{ path('admin_skateparks') }}">Voir tous les skateparks</a>#}
        {#       <a class="link" href="{{ path('admin_skatepark_create') }}">Créer un skatepark</a>#}


    </section>

    <section class="section">
        {% for club in lastClubs %}
            <div class="card">
                <div class="card-text">
                    <h2>{{ club.title }}</h2>
                    <h3>{{ club.description }}</h3>
                </div>
            </div>
        {% endfor %}
        <div class="card-ic">
            <div id="adm-btn" class="adm-btn">
                <div class="ic" ><a id="link1" href="{{ path('profile_club', {"id": club.id}) }}"><img src="{{ asset('icon/open-blue.png') }}" alt="Voir le club">
                        <br><h4 class="pad5">Voir le club</h4></a>
                </div>
                <div class="ic" ><a id="link2" href="{{ path('profile_club_create') }}"><img src="{{ asset('icon/add-file-green.png') }}" alt="Créer un club">
                        <br><h4 class="pad5">Créer un club</h4></a>
                </div>
                <div class="ic" ><a id="link3" href="{{ path('profile_club_update', {"id": club.id}) }}"><img src="{{ asset('icon/edit-pink.png') }}" alt="Modifier le club">
                        <br><h4 class="pad5">Modifier le club</h4></a>
                </div>
                <div class="ic" ><a id="link4" href="{{ path('profile_club_delete', {"id": club.id}) }}"><img src="{{ asset('icon/delete-orange.png') }}" alt="Supprimer le club">
                        <br><h4 class="pad5">Supprimer le club</h4></a>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        {% for shop in lastShops %}
            <div class="card">
                <div class="card-text">
                    <h2>{{ shop.title }}</h2>
                    <h3>{{ shop.description }}</h3>
                </div>
            </div>
        {% endfor %}
        <a href="{{ path('profile_shops') }}">Voir tous les shops</a>
        <a class="link" href="{{ path('profile_shop_create') }}">Créer un shop</a>
    </section>

{% endblock main%}