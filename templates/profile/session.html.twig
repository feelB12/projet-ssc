{% extends "profile/base.html.twig" %}

{% block metatitle %}
    {{ session.title }} | Skateboard Social Club
{% endblock metatitle %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/details.css') }}">
    <link rel="stylesheet" href="{{ asset('css/burger.css') }}">
    <link rel="stylesheet" href="{{ asset('css/search.css') }}">
{% endblock stylesheets %}

{% block main %}
    <section class="">
        <div id="ico">
            <div class="element"><img class="title logoBig" href="{{ path('profile_sessions') }}" src="{{ asset('icon/sessions_titre.png') }}" alt="Session"></div>
            <div class="element"><img class="title logoBig" href="{{ path('profile_sessions') }}" src="{{ asset('icon/session.png') }}" alt="Session-icon"></div>
        </div>
        <div class="line"></div>
        <div class="">
            <form action="{{ path('profile_search_sessions') }}">
                <article class="detail">
                    <div class="card-text" id="divSearch">
                        <div class="btn logo icon"><label for="userId"><img src="{{ asset('icon/loupe.png') }}" alt="loupe"></label>
                        </div>
                        <div class="btn"><input type="text" id="userId" name="query" placeholder="Ville, Code postal">
                        </div>
                        {% block search %}{% endblock search %}
                    </div>
                </article>
            </form>
        </div>
        <div class="line"></div>
        <article class="card-detail">
            <div class="card-title"><h1>{{ session.title }}</h1><br></div>
        </article>
        <article class="card-address">
            <div class="card-title"><h2>{{ session.address }} {{ session.town }}</h2></div>
        </article>
        <article class="detail">
            <div class="card-text">
                <div class="" id="tmsession">
                    <div class="image-session" id="tmbk">
                        <div id="abs1" class="absolute">
                            <b><img class="left logoBig resp arrow-left" src="{{ asset('icon/fleche_droite.png') }}" alt="Preview">
                            </b><br />
                        </div>
                        <div id="abs2" class="absolute">
                            <b>
                                <img class="arrow-right right logoBig resp" src="{{ asset('icon/fleche_droite.png') }}" alt="Next">
                            </b>
                            <br />
                        </div>
                        <div id="sta1" class="static">
                            <b>
                                <img class="img-card" src="{{ asset('uploads/cover/'~session.coverFilename) }}" alt="photo-session">
                            </b><br />
                        </div>
                    </div>
                    <div class="image-session">
                        <div class="">
                            <h4>{{ session.description }}</h4>
                            <h4>{{ session.address }}</h4>
                            <h4>{{ session.town }}</h4>
                            <h4>{{ session.area }}</h4>
                            {% if session.startAt %}
                                    <h4>La session est commencé depuis:</h4>
                                    <h4> {{ session.startAt  | date("Y-m-d H:i:s" ) |format_datetime('full', 'short', locale='fr') }}</h4>
                            {% else %}
                                <div>
                                    <h4>La session n'est pas commencé </h4>
                                </div>

                            {% endif %}
                            {% if session.finishedAt %}
                                <div>
                                    <h4>La session est finie depuis:</h4>
                                    <h4> {{ session.finishedAt  | date("Y-m-d H:i:s") |format_datetime('full', 'short', locale='fr') }}</h4>
                                </div>
                            {% else %}
                                <div>
                                    <h4>La session n'est pas finie </h4>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-text">
                <div class="list">
                    <ul id="abs4" class="absolute indicators ">
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
            </div>
        </article>
    </section>
    <section>
        <article class="detail">
            <div class="card-text">
                <div>
                    <ul class="adm-btn">
                        <li><a id="link1" class="pad5" href="{{ path('profile_session', {"id": session.id}) }}"><img src="{{ asset('icon/open-blue.png') }}" alt="Voir la session"><br><h4>Voir la session</h4></a></li>
                        <li><a id="link2" class="pad5" href="{{ path('profile_session_create', {"id": session.id}) }}"><img src="{{ asset('icon/add-file-green.png') }}" alt="Créer une session"><br><h4>Créer une session</h4></a></li>
                        <li><a id="link3" class="pad5" href="{{ path('profile_session_update', {"id": session.id}) }}"><img src="{{ asset('icon/edit-pink.png') }}" alt="Modifier une session"><br><h4>Modifier une session</h4></a></li>
                    </ul>
                </div>
                <div class="justifyBox">
                    <p>{{ session.description }}{{ session.description }}</p>
                </div>
            </div>
            <div class="card-text">
                <div class="card-text">
                    <iframe src="https://www.google.com/maps?q=[{{session.address}}{{session.town}}]&output=embed" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </article>
    </section>
    <section class="section">
        <article>

        </article>
    </section>
{% endblock main %}