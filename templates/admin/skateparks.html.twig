{% extends "admin/base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/details.css') }}">
    <link rel="stylesheet" href="{{ asset('css/burger.css') }}">
    <link rel="stylesheet" href="{{ asset('css/search.css') }}">
{% endblock stylesheets %}

{% block metatitle %}
    Skateparks | Skateboard Social Club
{% endblock metatitle %}

{% block main %}
    <section class="">
        <div id="ico">
            <div class="element"><img class="title logoBig" href="{{ path('admin_skateparks') }}" src="{{ asset('icon/skateparks_titre.png') }}" alt="Skatepark"></div>
            <div class="element"><img class="title logoBig" href="{{ path('admin_skateparks') }}" src="{{ asset('icon/skateparks.png') }}" alt="Skatepark-icon"></div>
        </div>
        <div class="line"></div>
        <div class="">
            <div class="">
                {% block search %}
                    <form action="{{ path('admin_search_skateparks') }}">
                        <div id="divSearch">
                            <div class="btn logo icon">
                            <label for="userId">
                                <img src="{{ asset('icon/loupe.png') }}" alt="loupe">
                            </label>
                            </div>
                            <div class="btn">
                                <input type="text" id="userId" name="query" placeholder="Ville, Code postal">
                            </div>
                            <input type="submit">
                        </div>
                    </form>
                {% endblock search %}
            </div>
            <div class="line">
            </div>
        </div>
    </section>
    <section class="section">
        <article class="book-detail">
            <article class="">
            </article>
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d45267.45075272003!2d-0.571391187931922!3d44.837541008065486!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sskatepark%20bordeaux!5e0!3m2!1sfr!2sfr!4v1653259114005!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </article>
    </section>
    <section class="section">
        <h3 class="al"> Aller à :</h3>
        {% for skatepark in skateparks %}
            <div class="card-text">
                <div class="card-t">
                    <h1>{{ skatepark.title }}</h1>
                </div>
                <div id="abs5" class="absolute ban" alt="banner-address">
                    <h2>{{ skatepark.address}} {{ skatepark.town}}</h2>
                </div>
                <div id="sta1" class="static">
                    <b>
                        <img class="img-card" src="{{ asset('uploads/cover/'~skatepark.coverFilename) }}" alt="photo-skatepark">
                    </b>
                </div>

                {#             {% if skatepark.club %} #}
                {#                        <h3>{{ skatepark.club.town }} {{ skatepark.club.area }}</h3> #}
                {#                    {% endif %} #}

            </div>
            <ul class="adm-btn">
                <li><a id="link1" class="pad5" href="{{ path('admin_skatepark', {"id": skatepark.id}) }}"><img src="{{ asset('icon/open-blue.png') }}" alt="Voir le skatepark"><br><h4>Voir le skatepark</h4></a></li>
                <li><a id="link2" class="pad5" href="{{ path('admin_skatepark_create', {"id": skatepark.id}) }}"><img src="{{ asset('icon/add-file-green.png') }}" alt="Créer un skatepark"><br><h4>Créer un skatepark</h4></a></li>
                <li><a id="link3" class="pad5" href="{{ path('admin_skatepark_update', {"id": skatepark.id}) }}"><img src="{{ asset('icon/edit-pink.png') }}" alt="Modifier un skatepark"><br><h4>Modifier un skatepark</h4></a></li>
                <li><a id="link4" class="pad5" href="{{ path('admin_skatepark_delete', {"id": skatepark.id}) }}"><img src="{{ asset('icon/delete-orange.png') }}" alt="Supprimer le skatepark"><br><h4>Supprimer le skatepark</h4></a></li>
            </ul>
        {% endfor %}
    </section>
{% endblock main%}