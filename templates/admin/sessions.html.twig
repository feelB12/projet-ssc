{% extends "admin/base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/details.css') }}">
    <link rel="stylesheet" href="{{ asset('css/burger.css') }}">
{% endblock stylesheets %}

{% block metatitle %}
    Sessions | Skateboard Social Club
{% endblock metatitle %}

{% block main %}
    <section class="">
        <div id="ico">
            <div class="element"><img class="title logoBig" href="{{ path('clubs') }}" src="{{ asset('icon/sessions_titre.png') }}" alt="Club"></div>
            <div class="element"><img class="title logoBig" href="{{ path('clubs') }}" src="{{ asset('icon/session.png') }}" alt="Club-icon"></div>
        </div>
        <div class="line"></div>
        <div class="">
            {% block search %}
                <form action="{{ path('admin_search_sessions') }}">
                    <article class="detail">
                        <div class="card-text" id="divSearch">
                            <div class="btn logo icon"><label for="userId"><img src="{{ asset('icon/loupe.png') }}" alt="loupe"></label>
                            </div>
                            <div class="btn"><input type="text" id="userId" name="query" placeholder="Ville, Code postal">
                            </div>
                        </div>
                    </article>
                </form>
            {% endblock search %}
        </div>
        <div class="line">
        </div>
    </section>
    <section class="section">
        <article class="book-detail">
            <article class="">
            </article>
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m12!1m8!1m3!1d22632.638892001858!2d-0.5839162444580078!3d44.84030694564788!3m2!1i1024!2i768!4f13.1!2m1!1sclub%20skateboard%20bordeaux!5e0!3m2!1sfr!2sfr!4v1653259456211!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </article>
    </section>
    <section class="section">
        <article>
            {% for session in sessions %}
                <div class="card">
                    <div class="card-text">
                        <h1>{{ session.title }}</h1>
                        {#  <img src="{{ asset('uploads/cover/'~club.coverFilename) }}" alt=""> #}
                        <h2>{{ session.description}}</h2>
                        <h3>{{ session.town}}</h3>
                        <h3>{{ session.area}}</h3>
                        {% if session.startAt %}
                            <h3>La session est commencé depuis: {{ session.startAt  | date("Y-m-d H:i:s" ) |format_datetime('full', 'short', locale='fr') }}</h3>
                        {% else %}
                            <h3>La session n'est pas commencé </h3>
                        {% endif %}
                        {% if session.finishedAt %}
                            <h3>La session est finie depuis: {{ session.finishedAt  | date("Y-m-d H:i:s") |format_datetime('full', 'short', locale='fr') }}</h3>
                        {% else %}
                            <h3>La session n'est pas finie </h3>
                        {% endif %}
                        {#             {% if skatepark.club %} #}
                        {#                        <h3>{{ skatepark.club.town }} {{ skatepark.club.area }}</h3> #}
                        {#                    {% endif %} #}
                    </div>
                    <a class="link" href="{{ path('admin_session', {"id": session.id}) }}">Voir la session</a>
                    <a class="link" href="{{ path('admin_session_create', {"id": session.id}) }}">Créer un session</a>
                    <a class="link" href="{{ path('admin_session_update', {"id": session.id}) }}">Modifier un session</a>
                    <a class="link" href="{{ path('admin_session_delete', {"id": session.id}) }}">Supprimer la session</a>
                </div>
            {% endfor %}
        </article>
    </section>
{% endblock main%}